{% extends 'base.html.twig' %}
{% form_theme outingForm 'bootstrap_4_layout.html.twig'  %}



{% block main %}

    <h2>Création d'une sortie</h2>

    {{ form_start(outingForm) }}
    {{ form_row(outingForm.nom) }}

    <div class="row">
        <div class="col-md-6">{{ form_row(outingForm.dateHeureDebut) }}</div>
        <div class="col-md-6"> {{ form_row(outingForm.dateLimiteInscription) }}</div>
    </div>

    <div class="row">
        <div class="col-md-4">{{ form_row(outingForm.nbInscriptionsMax) }}</div>
        <div class="col-md-4"> {{ form_row(outingForm.duree) }}</div>
        <div class="col-md-4">{{ form_row(outingForm.infosSortie) }}</div>
    </div>

    <div class="row">
        <div class="col-md-6"> {{ form_row(outingForm.campusOrganisateur) }}</div>
        <div class="col-md-6"> {{ form_row(outingForm.lieu) }}</div>
    </div>

    <div class="row">
        <div class="col-md-4">{{ form_row(outingForm.enregistrer) }}</div>
        <div class="col-md-4">{{ form_row(outingForm.enregistrerEtPublier) }}</div>
        <div class="col-md-4"> <a type="reset" class="btn btn-danger" href="{{ path('home') }}">Annuler</a></div>
    </div>

    {{ form_end(outingForm) }}


{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/app.js') }}"></script>



{% endblock %}


{% block title %} Créer une sortie ! | {{ parent() }} {% endblock %}