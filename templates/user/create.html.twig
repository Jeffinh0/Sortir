{% extends 'base.html.twig' %}
{% form_theme profileForm 'bootstrap_4_layout.html.twig'  %}

{% block main %}

    {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
    <h1>Cr√©ation de mon profil : </h1>
    {% else %}
    <h1>Mon profil</h1>
    {% endif %}

    {{ form_start(profileForm) }}
    <div class="row">
        <div class="col-md-4">{{ form_row(profileForm.Username) }}</div>
        <div class="col-md-4">{{ form_row(profileForm.Prenom) }}</div>
        <div class="col-md-4">{{ form_row(profileForm.Nom) }}</div>
    </div>

    <div class="row">
        <div class="col-md-4">{{ form_row(profileForm.imageFile,{'label':'Photo de profil '}) }}</div>
        <div class="col-md-4">{{ form_row(profileForm.Telephone) }}</div>
        <div class="col-md-4">{{ form_row(profileForm.Mail) }}</div>
    </div>

    <div class="row">
        <div class="col-md-6">{{ form_row(profileForm.password,{'label':'Mot de Passe :','attr':{'placeholder':'ClearMot de passe', 'value':'{{ clearPassword }}'}}) }}</div>
        <div class="col-md-6">{{ form_row(profileForm.Campus) }}</div>
    </div>

    <button type="submit" class="btn btn-success">
        {% if editMode %}
            Valider modifications
        {% else%}
            Enregistrer
        {% endif %}
    </button>

    <a type="reset" class="btn btn-danger" href="{{ path('home') }}">Annuler</a>

    {{ form_end(profileForm) }}

{% endblock %}

{% block title %}{{ parent()}}| Profil{% endblock %}
